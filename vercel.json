{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "dist/server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server/index.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "dist/public/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)\\.(.+)$",
      "dest": "dist/public/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "dist/server/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}